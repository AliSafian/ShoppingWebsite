@model List<DAL.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">Checkout</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--start-ckeckout-->
<div class="ckeckout">
    <div class="container">
        <div class="ckeck-top heading">
            <h2>CHECKOUT</h2>
        </div>
        <div class="ckeckout-top">
            <div class="cart-items">
                <h3>My Shopping Bag (@Model.Count)</h3>
                
                <div class="in-check">
                    <ul class="unit">
                        <li><span>Item</span></li>
                        <li><span>Product Name</span></li>
                        <li><span>Unit Price</span></li>
                        <li><span>Count</span></li>
                        <li> </li>
                        <div class="clearfix"> </div>
                    </ul>
                  
                    @foreach (var item in Model) 
                    { 
                    <ul class="cart-header">
                        <a href='@Url.Action("Delete", "Checkout", new { ProductID =@item.ProductID })'><div class="close1"> </div> </a>
                        <li class="ring-in">
                            <a href="~/Product/Single/@item.ProductID"><img style="height:100px ; width:100px" src="~/Images/@item.Product.PictureName" class="img-responsive" alt=""></a>
                        </li>
                        <li><span class="name">@item.Product.Name</span></li>
                        <li><span class="cost">Rs @item.Product.Price</span></li>
                       
                        <li><span class="cost">@item.Quantity</span></li>
                        
                        <div class="clearfix"> </div>
                    </ul>
                         
                    }
                   @if(Model.Count != 0)
                   {
                        <a href="~/Checkout/CheckoutDetail" style="float:right"><input type="submit" class="btn btn-default" value="Shop Now" style="color:white ; background-color: black" /></a>
                   }
                        
                        
</div>
            </div>
        </div>
    </div>
</div>
<!--end-ckeckout-->

