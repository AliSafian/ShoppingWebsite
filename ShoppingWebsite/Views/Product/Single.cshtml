@model ShoppingWebsite.Models.ProductModel
@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<!--start-single-->
<div class="single contact">
    <div class="container">
        <div class="single-main">
            <div class="col-md-9 single-main-left">
                <div class="sngl-top">
                    <div class="col-md-5 single-top-left">
                        <div class="flexslider">
                            <ul class="slides">
                                <li data-thumb="~/Images/@Model.PictureName">
                                    <div class="thumb-image"> <img src="~/Images/@Model.PictureName" data-imagezoom="true" class="img-responsive" alt="" /> </div>
                                </li>
                            </ul>
                        </div>
                        <!-- FlexSlider -->
                        <script src="~/js/imagezoom.js"></script>
                        <script defer src="~/js/jquery.flexslider.js"></script>
                        <link rel="stylesheet" href="~/css/flexslider.css" type="text/css" media="screen" />

                        <script>
                            // Can also be used with $(document).ready()
                            $(window).load(function () {
                                $('.flexslider').flexslider({
                                    animation: "slide",
                                    controlNav: "thumbnails"
                                });
                            });
                        </script>
                    </div>
                    <div class="col-md-7 single-top-right">
                        @using(@Html.BeginForm("Add" , "Checkout", FormMethod.Post))
                        {
                             <div class="single-para simpleCart_shelfItem">
                                <h2>@Model.Name</h2>
                                
                                <h5 class="item_price">Rs. @Model.Price</h5>
                                <p>@Model.Description</p><hr/>
                                <p>A Quality Product By Khareedo.pk. With Cheap Prices Country's Most Selling Brand. A Quality Product By Khareedo.pk. With Cheap Prices Country's Most Selling Brand.A Quality Product By Khareedo.pk. With Cheap Prices Country's Most Selling Brand. </p>
                                <div class="available">
                                    <ul>

                                        <li>
                                            <h4><b>Count: </b><input style="height:30px; width:300px" type="number" name="Quantity" required /></h4> 
                                            <p style="color:red">@TempData["Msg"]</p>
                                            <input type="hidden" name="ProductID" value="@Model.ProductID" />
                                        </li>
                                            
                                    </ul>
                                    <div class="clearfix"> </div>
                                </div>

                                <input type="submit" class="btn btn-default" value="ADD TO CART" />

                        </div>
                        }
                       
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="col-md-3 prdt-right">
                <div class="w_sidebar">
                    <section class="sky-form">
                        <h4>Advertisement</h4>
                        <img style="height:300px; width:250px;" src="~/images/ad-1.jpg" />

                    </section>

                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

<!--end-single-->
