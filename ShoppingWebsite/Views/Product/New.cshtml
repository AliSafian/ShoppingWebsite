@model ShoppingWebsite.Models.ProductModel
@{
    ViewBag.Title = "Administration - Khareedo.pk";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}

<h2>Create New Product</h2>

@using (Html.BeginForm("New", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="PictureName" value="@Model.PictureName" />
            @Html.LabelFor(m => m.CategoryID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if(Model.ProductID == 0){
                       List<SelectListItem> list = ViewBag.CategoryList;
                     @Html.DropDownListFor(m => m.CategoryID, list)
                }
                else
                {
                    @Html.ValueFor(m => m.CategoryID)
                }
               
            </div>

        </div>
        <div class="form-group">
            @Html.Label("Picture", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="image" value="@Model.PictureName" />
             @if(Model.PictureName != null){
               
                
                <img src="/Images/@Model.PictureName" style="width:300px; height:300px;" />
                
            }
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Price, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>

        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}


